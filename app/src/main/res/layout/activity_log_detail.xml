<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- ScrollView with single scroll (no nested scrolling) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Basic Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Basic Information"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/detailTimestamp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Time:"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/detailPackage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Package:"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/detailFunction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Function:"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:lineSpacingExtra="2dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/detailType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Type:"
                        android:textSize="14sp"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- APDU Command Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardApduCommand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="APDU Command"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyCommand"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:minWidth="64dp"
                            android:minHeight="36dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailApduCommand"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Command:"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- APDU Response Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardApduResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="APDU Response"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyResponse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:minWidth="64dp"
                            android:minHeight="36dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailApduResponse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Response:"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- AID Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Application ID (AID)"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyAid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:minWidth="64dp"
                            android:minHeight="36dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailAid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="AID:"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Select Response Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSelectResponse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Select Response"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopySelectResponse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:minWidth="64dp"
                            android:minHeight="36dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailSelectResponse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Response:"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Additional Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Additional Details"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/detailDetails"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Details:"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Error Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardError"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Error"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyError"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:minWidth="64dp"
                            android:minHeight="36dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/detailError"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Error:"
                        android:textSize="14sp"
                        android:fontFamily="monospace"
                        android:textIsSelectable="true"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- Call Stack (primary section) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStackTrace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Call Stack"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyStack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy"
                            android:textSize="12sp"
                            style="@style/Widget.MaterialComponents.Button.TextButton"
                            android:minWidth="64dp"
                            android:minHeight="36dp" />

                    </LinearLayout>

                    <!-- Container for dynamic stack frame cards -->
                    <LinearLayout
                        android:id="@+id/stackTraceContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp" />
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>