<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- LSPosed Scope: Recommended packages to hook for OMAPI monitoring
         Note: The module will hook OMAPI calls in ANY app added to scope.
         These are just recommended/essential packages for typical usage.
         
         REQUIRED for functionality:
         - android (Android Framework - contains OMAPI implementation)
         - com.android.se (SecureElement system service)
         
         Add any app you want to monitor to the scope list in LSPosed.
    -->
    <string-array name="xposed_scope">
        <!-- REQUIRED: Android Framework - Core OMAPI implementation -->
        <item>android</item>
        
        <!-- REQUIRED: System SE Service -->
        <item>com.android.se</item>
        
        <!-- Optional: Common apps that use OMAPI -->
        <!-- Google Services -->
        <item>com.google.android.gms</item>
        <item>com.google.android.gsf</item>
        
        <!-- Payment apps -->
        <item>com.google.android.apps.walletnfcrel</item>
        <item>com.samsung.android.spay</item>
        
        <!-- SIM Toolkit -->
        <item>com.android.stk</item>
        
        <!-- Felica (Japanese mobile payment/transit apps) -->
        <item>com.felicanetworks.mfm.main</item>
        <item>com.felicanetworks.mfc</item>
        <item>com.felicanetworks.mfw.a.main</item>
        <item>com.felicanetworks.mfw.a.boot</item>
        <item>com.felicanetworks.mfs</item>
        
        <!-- Add any other apps you want to monitor here -->
    </string-array>
</resources>
